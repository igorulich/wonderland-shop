{
  "extends": "stylelint-config-standard-scss",
  "rules": {
    "selector-id-pattern": "^[a-z]+(?:[A-Z][a-z]+)*$",
    "scss/dollar-variable-pattern": null,
    "color-no-invalid-hex": true,
    "number-max-precision": [
      3,
      {
        "ignoreUnits": [
          "em","%","vh","vw"
        ],
        "severity": "warning"
      }
    ],
    "selector-pseudo-class-no-unknown": [
      true,
      {
        "ignorePseudoClasses": [
          "global"
        ]
      }
    ]
  }
}
